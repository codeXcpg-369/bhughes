<mvc:View
    controllerName="app.projbhughes.controller.MasterView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="page"
        showHeader="false"
        class="detailPage"
    >
        <VBox class="customHeader">
            <HBox
                justifyContent="SpaceBetween"
                class="topBar"
            >
                <HBox
                    alignItems="Center"
                    class="leftHeader"
                >
                    <Image
                        src="/images/mky-logo.png"
                        height="40px"
                        width="200px"
                        class="roundedLogo"
                    />
                    <Text
                        text="Material Manager"
                        class="HText"
                    />
                </HBox>
                <HBox
                    alignItems="Center"
                    class="rightHeader"
                >
                    <Button
                        id="searchBtn"
                        icon="sap-icon://search"
                        type="Transparent"
                        class="whiteIconButton"
                        press="onSearch"
                    />
                    <Button
                        icon="sap-icon://employee"
                        type="Transparent"
                        class="whiteIconButton"
                    />
                </HBox>
            </HBox>
        </VBox>

        <ScrollContainer
            id="scrollContainer"
            horizontal="true"
            vertical="true"
            width="100%"
            height="auto"
            class="scrollContainerWithPadding"
        >
            <Table
                id="equipmentTable"
                items="{eqModel>/equipment}"
                mode="SingleSelectMaster"
                itemPress="onItemPress"
                fixedLayout="false"
                width="150%"
                class="styledTable"
            >
                <columns>
                    <Column width="5rem">
                        <Text text="{i18n>MPno}" />
                    </Column>
                    <Column width="5rem">
                        <Text text="{i18n>EqNo}" />
                    </Column>
                    <Column width="15rem">
                        <Text text="{i18n>EqDesc}" />
                    </Column>
                    <Column width="7rem">
                        <Text text="{i18n>Mat}" />
                    </Column>
                    <Column width="7rem">
                        <Text text="{i18n>objtype}" />
                    </Column>
                    <Column width="5rem">
                        <Text text="{i18n>auth_group}" />
                    </Column>
                    <Column width="5rem">
                        <Text text="{i18n>manufacturer_serial_no}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text
                                text="{eqModel>general/manufacturer_part_no}"
                                class="tableCell"
                            />
                            <Text
                                text="{eqModel>equipment_number}"
                                class="tableCell"
                            />
                            <Text
                                text="{eqModel>equipment_description}"
                                class="tableCell"
                            />
                            <Text
                                text="{eqModel>material}"
                                class="tableCell"
                            />
                            <Text
                                text="{eqModel>general/object_type}"
                                class="tableCell"
                            />
                            <Text
                                text="{eqModel>general/auth_group}"
                                class="tableCell"
                            />
                            <Text
                                text="{eqModel>general/manufacturer_serial_no}"
                                class="tableCell"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </ScrollContainer>
        <Button
            icon="sap-icon://navigation-right-arrow"
            press="onScrollRight"
            tooltip="Scroll Right"
            class="scrollRightButton"
        />
        <Button
            icon="sap-icon://navigation-left-arrow"
            press="onScrollLeft"
            tooltip="Scroll Left"
            class="scrollLeftButton"
            visible="{scrollModel>/showLeftScroll}"
        />
    </Page>
</mvc:View>